<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.pmipenggolongandarahadmin.MainActivity">

    <Button
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"/>

    <Button
        android:id="@+id/stok_darah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STOK DARAH"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"/>

    <Button
        android:id="@+id/pendonor_darah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PENDONOR DARAH"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"/>

    <Button
        android:id="@+id/informasi_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INFORMASI EVENT"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"/>

    <Button
        android:id="@+id/tambah_pendonor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAMBAH PENDONOR"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"/>

    <Button
        android:id="@+id/laporan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LAPORAN"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_light"/>
</LinearLayout>
